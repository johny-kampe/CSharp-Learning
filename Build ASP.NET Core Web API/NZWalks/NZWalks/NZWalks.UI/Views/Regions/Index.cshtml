@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>

@{
}

<h1 class="mt-3">Regions</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>CODE</td>
            <td>NAME</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
            </tr>
        }
    </tbody>
</table>